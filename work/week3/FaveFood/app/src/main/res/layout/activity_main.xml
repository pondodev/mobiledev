<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TableLayout
            android:layout_width="189dp"
            android:layout_height="571dp" tools:layout_editor_absoluteY="15dp" tools:layout_editor_absoluteX="110dp"
            android:id="@+id/tblImages">

        <TableRow android:layout_width="326dp" android:layout_height="match_parent">
            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp" app:srcCompat="@drawable/pizza"
                    android:id="@+id/imgPizza"
            />
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="139dp" app:srcCompat="@drawable/nachos"
                    android:id="@+id/imgNachos"
            />
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView
                    android:layout_width="180dp"
                    android:layout_height="150dp" app:srcCompat="@drawable/takis"
                    android:id="@+id/imgTakis"
            />
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView
                    android:layout_width="180dp"
                    android:layout_height="139dp" app:srcCompat="@drawable/thewreck"
                    android:id="@+id/imgTheWreck"
            />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>