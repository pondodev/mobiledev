<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TableLayout
            android:id="@+id/tblImages"
            android:layout_width="0dp"
            android:layout_height="158dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TableRow
                android:layout_width="258dp"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/imgPizza"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/pizza" />

            <ImageView
                    android:id="@+id/imgNachos"
                    android:layout_width="150dp"
                    android:layout_height="139dp"
                    app:srcCompat="@drawable/nachos" />

            <ImageView
                    android:id="@+id/imgTakis"
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/takis" />

            <ImageView
                    android:id="@+id/imgTheWreck"
                    android:layout_width="180dp"
                    android:layout_height="139dp"
                    app:srcCompat="@drawable/thewreck" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>