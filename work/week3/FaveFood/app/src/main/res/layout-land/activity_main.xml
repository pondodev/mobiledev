<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="150" app:srcCompat="@drawable/pizza"
            android:id="@+id/imgPizza"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toStartOf="@+id/imgNachos" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginEnd="107dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/nachos"
            android:id="@+id/imgNachos"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/imgPizza" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="15dp" app:layout_constraintBottom_toTopOf="@+id/imgTakis"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="236dp"
    />
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/takis"
            android:id="@+id/imgTakis"
            app:layout_constraintTop_toBottomOf="@+id/imgNachos" app:layout_constraintStart_toEndOf="@+id/imgPizza"
            app:layout_constraintEnd_toStartOf="@+id/imgTheWreck" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="11dp"
    />
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/thewreck"
            android:id="@+id/imgTheWreck"
            app:layout_constraintTop_toBottomOf="@+id/imgNachos" app:layout_constraintStart_toEndOf="@+id/imgTakis"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="16dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>