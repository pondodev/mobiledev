<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="300dp"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgBorderCollie"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="viewBorderCollie"
                app:srcCompat="@drawable/bordercollie" />

            <TextView
                android:id="@+id/lblBorderCollie"
                style="@android:style/Widget.Material.Light.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgGermanShepard"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="viewGermanShepard"
                app:srcCompat="@drawable/germanshepard" />

            <TextView
                android:id="@+id/lblGermanShepard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imgJackRussel"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="viewJackRussel"
                app:srcCompat="@drawable/jackrussel" />

            <TextView
                android:id="@+id/lblJackRussel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgKelpie"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="viewKelpie"
                app:srcCompat="@drawable/kelpie" />

            <TextView
                android:id="@+id/lblKelpie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>